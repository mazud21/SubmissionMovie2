<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.hmazud.submissionmovie2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <permission
        android:name="com.gmail.hmazud.submissionmovie2.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.gmail.hmazud.submissionmovie2.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailMovie" />
        <activity android:name=".SearchMovie" />
        <activity android:name=".NowPlaying" />
        <activity android:name=".UpComing"></activity>

        <provider
            android:name=".provider.FavoriteProvider"
            android:authorities="com.gmail.hmazud.submissionmovie2"
            android:exported="true"
            android:readPermission="com.gmail.hmazud.submissionmovie2.READ_DATABASE"
            android:writePermission="com.gmail.hmazud.submissionmovie2.WRITE_DATABASE" />

    </application>

</manifest>